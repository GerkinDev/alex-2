{% extends 'pages/base.html.twig' %}
{% block body %}
<div class="templatemo-content-wrapper">
	<div class="templatemo-content">
		<section id="login-form" class="inactive active" style="display: block;">
			<div class="row">
				<div class="black-bg col-md-12 col-lg-12 col-xl-12">
					<h2 class="text-center">Sign Up</h2>
					<div class="col-md-12 col-lg-12 margin-bottom-20 text-center">
						{% set flashMessages = app.session.flashbag.get('login') %}
						{% if flashMessages is not empty %}
						<div class="alert alert-danger">
							{% for flashMessage in flashMessages %}{{ flashMessage }}{% endfor %}
						</div>
						{% endif %}
						<form action="{{ path("signup_check")}}" method="post">
							{% set datas = app.session.has('signup_data') ? app.session.get('signup_data') : {
							'fname': '',
							'lname': '',
							'email': '',
							'password': '',
							'repeat_password': '',
							} %}
							<div class="form-group">
								<!--<label for="signup_fname">Firstname</label>-->
								<input value="{{ datas.fname }}" required name="fname" type="text" id="signup_fname" class="form-control" placeholder="Firstname" />
							</div>
							<div class="form-group">
								<!--<label for="signup_lname">Lastname</label>-->
								<input value="{{ datas.lname }}" required name="lname" type="text" id="signup_lname" class="form-control" placeholder="Lastname" />
							</div>
							<div class="form-group">
								<!--<label for="signup_email">Email Address</label>-->
								<input value="{{ datas.email }}" required name="email" type="text" id="signup_email" class="form-control" placeholder="Email Address" />
							</div>
							<div class="form-group">
								<!--<label for="signup_password">Password</label>-->
								<input value="{{ datas.password }}" required name="password" type="password" id="signup_password" class="form-control" placeholder="Password" />
							</div>
							<div class="form-group">
								<!--<label for="signup_confirm_password">Repeat Password</label>-->
								<input value="{{ datas.repeat_password }}" required name="repeat_password" type="password" id="signup_confirm_password" class="form-control" placeholder="Repeat Password" />
							</div>
							<button type="submit" class="btn btn-primary">Register</button>
						</form>
					</div>
					<div class="clearfix"></div>
				</div>
			</div>
			<div class="row margin-top-20">
				<div class="col-sm-6 col-md-6 col-lg-6 col-xl-6  pull-left">
					<a href="/login" class="change-section">
						<div class="black-bg btn-menu">
							<h2>Back to LogIn</h2>
						</div>
					</a>
				</div>
				<div class="col-sm-6 col-md-6 col-lg-6 col-xl-6  pull-right">
					{{ include('components/back-to-menu-btn.html.twig') }}
				</div>
			</div>
		</section><!-- /.contact-section -->
	</div>
</div>
{% endblock %}
{% block background_image %}zoom-bg-7.jpg{% endblock %}
